<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bitcamp.java106.pms.dao.MemberDao">

  <resultMap type="Member" id="MemberMap">
    <id column="mid" property="id"/>
    <result column="email" property="email"/>
    <result column="name" property="userName"/>
    <result column="proImg" property="profileImg"/>
    <result column="jender" property="jender"/>
  </resultMap>
  
  <insert id="insert" parameterType="Member">
    insert into pms2_member(mid,email,name,proImg,jender) 
    values(#{id},#{email},#{userName},#{profileImg},#{jender})
  </insert>
  
  <select id="selectOne" parameterType="String" resultMap="MemberMap">
    select mid, email, name, proImg, jender 
    from pms2_member 
    where mid=#{value}
  </select>
  
  <select id="count" parameterType="map" resultType="int">
    select count(*) 
    from pms2_member 
    where mid=#{id} and email=email(#{email})
  </select>
  
  <update id="update" parameterType="Member">
    update pms2_member set 
        email=#{email}, 
        name=#{userName},
        jender=#{jender},
        proImg=#{profileImg} 
    where mid=#{id}
  </update>
  
  <delete id="delete" parameterType="String">
    delete from pms2_member where mid=#{value}
  </delete>
</mapper>







